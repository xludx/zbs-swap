{
  "name": "zbs-swap",
  "description": "Zymosis Boozing Society Token + Token Swap",
  "version": "1.0.0",
  "engines": {
    "node": ">= 12.18.0"
  },
  "repository": "github:wighawag/template-ethereum-contracts",
  "license": "MIT",
  "keywords": [
    "blockchain",
    "ethereum",
    "smart-contracts",
    "hardhat",
    "solidity",
    "template",
    "boilerplate"
  ],
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@0.3.0-beta.10",
    "@openzeppelin/contracts": "^3.4.1",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.0.2",
    "@types/chai": "^4.2.18",
    "@types/chai-as-promised": "^7.1.4",
    "@types/fs-extra": "^9.0.11",
    "@types/mocha": "^8.0.2",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-ethers": "^0.0.1",
    "cross-env": "^7.0.2",
    "dotenv": "^10.0.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "ethers": "^5.3.1",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.3.3",
    "hardhat-deploy": "^0.8.6",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^6.0.0",
    "mocha": "^9.0.0",
    "prettier": "^2.3.1",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.15",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.0.0",
    "typechain": "^5.0.0",
    "typescript": "^4.3.2"
  },
  "scripts": {
    "clean": "hardhat clean",
    "prepare": "node ./.setup.js && hardhat typechain",
    "lint": "yarn run lint:sol && yarn run lint:ts && yarn run prettier:fix",
    "lint:fix": "yarn run lint:sol --fix && yarn run lint:ts --fix && yarn run prettier:fix",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier": "prettier --check --config ./.prettierrc \"**/*.{js,json,md,sol,ts}\"",
    "prettier:fix": "prettier --config ./.prettierrc --write \"**/*.{js,json,md,sol,ts}\"",
    "build": "yarn lint && yarn prepare && yarn compile && yarn test",
    "compile": "hardhat compile",
    "void:deploy": "hardhat deploy",
    "test": "cross-env HARDHAT_DEPLOY_FIXTURE=true HARDHAT_COMPILE=true mocha --bail --recursive test",
    "gas": "cross-env REPORT_GAS=true hardhat test",
    "coverage": "cross-env HARDHAT_DEPLOY_FIXTURE=true hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "dev": "hardhat node --watch --export gui/src/contractsInfo.json --show-accounts",
    "dev:local": "hardhat --network localhost deploy --watch --export gui/src/contractsInfo.json",
    "execute": "node ./_scripts.js run",
    "deploy": "node ./_scripts.js deploy",
    "export": "HARDHAT_NETWORK=localhost node ./_scripts.js export localhost ",
    "fork:execute": "node ./_scripts.js fork:run",
    "fork:deploy": "node ./_scripts.js fork:deploy",
    "fork:dev": "node ./_scripts.js fork:dev",
    "fork:node": "node ./_scripts.js fork:node",
    "fork:test": "node ./_scripts.js fork:test",
    "task:accounts": "hardhat run scripts/accounts.ts --network",
    "task:accounts:local": "hardhat run scripts/accounts.ts --network localhost",
    "task:accounts:hh": "hardhat run scripts/accounts.ts --network hardhat",
    "task:block": "hardhat run scripts/block.ts --network",
    "task:block:local": "hardhat run scripts/block.ts --network localhost",
    "task:block:hh": "hardhat run scripts/block.ts --network hardhat",
    "task:balance": "yarn task:balance:local",
    "task:balance:local": "HARDHAT_NETWORK=localhost ts-node scripts/balance.ts",
    "task:balance:hh": "HARDHAT_NETWORK=hardhat ts-node scripts/balance.ts",
    "postinstall": "husky install"
  }
}
